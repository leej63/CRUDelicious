@model CRUDelicious.Models.Dish

<div>
    <h1>Edit @Model.Name</h1>
    <div>
        <a href="/">Home</a>
        <form asp-action="EditDish" asp-controller="Home" method="post">
            <input type="hidden" asp-for="DishId" value="@Model.DishId">
            <span asp-validation-for="Chef"></span><br>
            <label asp-for="Chef"></label><br>
            <input asp-for="Chef"><br>
            <span asp-validation-for="Name"></span><br>
            <label asp-for="Name"></label><br>
            <input asp-for="Name"><br>
            <span asp-validation-for="Calories"></span><br>
            <label asp-for="Calories"></label><br>
            <input asp-for="Calories"><br>
            <span asp-validation-for="Tastiness"></span><br>
            <label asp-for="Tastiness"></label><br>
            <select asp-for="Tastiness">
                <option value="none">Select an Option</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select><br>
            <span asp-validation-for="Description"></span><br>
            <label asp-for="Description"></label><br>
            <textarea cols="30" rows="5" asp-for="Description"></textarea><br>
            <button class="btn btn-primary" type="submit">Edit Dish</button>
        </form>
    </div>
</div>